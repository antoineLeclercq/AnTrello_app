input
  height: $heights.input
  padding: 7px
  outline: none
  border: none
  border-radius: 3px

a
  text-decoration: none

p
  word-wrap: break-word
  overflow: hidden
  white-space: normal

textarea
  border: none
  border-radius: $radius.main
  resize: none
  font: inherit
  color: inherit
  &.title
    box-sizing: border-box
    padding: 5px
    font-weight: bold
    transition: background 0.25s
    color: $colors.light-black
    cursor: pointer
    &:focus
      background: white
      outline: none
  &.formated
    background: inherit

.modal
  display: none
  position: absolute
  border-radius: $radius.main
  box-sizing: border-box
  padding: 10px
  background: white
  border: 1px solid $colors.light-grey
  z-index: 3
  hr
    border: none
    border-bottom: 1px solid $colors.light-grey
    margin: 10px auto
  h3
    text-align: center
    font-weight: normal
    color: $colors.darker-grey
  + .overlay
    display: none
    z-index: 2

.overlay
  position: fixed
  left: 0
  top: 0
  right: 0
  bottom: 0

.close
  margin: 0 10px 0 0
  float: right
  cursor: pointer
  color: $colors.darker-grey
  &:hover
    color: $colors.light-black

.prev
  float: left
  vertical-align: middle
  cursor: pointer

#lists
  float: left
  height: 100%
  white-space: nowrap

.list
  box-sizing: border-box
  display: inline-block
  position: relative
  width: $widths.list
  margin: 0 5px
  padding: 5px 8px
  border-radius: $radius.main
  background: $colors.light-grey
  color: $colors.light-black
  vertical-align: top
  header
    position: relative
    cursor: pointer
  .overlay-header
    position: absolute
    top: 0
    right: 30px
    bottom: 0
    left: 0
    cursor: pointer
  .title
    width: 200px
  .list-icons
    float: right
    span
      display: inline-block
      color: $colors.darker-grey
    .more
      padding: 5px 5px 0 5px
      border-radius: $radius.main
      cursor: pointer
      &:hover
        color: inherit
        background: $colors.grey
    .subscribed
      display: none
  .list-icons.is-subscribed
    .subscribed
      display: inline-block
  .modal
    top: 40px
    left: $widths.list - 30
    width: 300px
    padding: 10px 0
    background: white
    color: $colors.light-black
    hr
      width: 300px - 30
    .actions
      font-weight: bold
      .action
        padding: 7px 10px
        cursor: pointer
        &:hover
          background: $colors.blue
          color: white

.move
  padding: 12px
  label-select()
  input[type="submit"]
    submit-btn()

.copy
  padding: 12px
  dl
    margin: 0 0 15px 0
    dt
      margin: 0 0 15px 0
    textarea
      width: 95%
      min-height: 60px
      padding: 5px
      border: 1px solid $colors.grey
      &:focus
        border: 1px solid $colors.blue
        box-shadow: $shadows.all-sides-blue
  input[type="submit"]
    submit-btn()

.move-all-cards
  .actions
    .action
      &:first-child
        color: $colors.darker-grey
        cursor: auto
        &:hover
          background: white
          color: $colors.darker-grey

.add-card
  a
    display: block
    box-sizing: border-box
    height: 30px
    padding: 5px 0 0 2px
    border-radius: $radius.main
    color: $colors.darker-grey
    cursor: pointer
    &:hover
      text-decoration: underline
      color: $colors.light-black
      background: $colors.grey
    + form
      display: none
  form
    display: block
    textarea
      box-sizing: border-box
      width: $widths.list - 16
      padding: 5px;
    form-controls()

.cards
    min-height: 10px
  .card
    box-sizing: border-box
    width: $widths.list - 16
    padding: 7px
    margin: 5px 0
    border-radius: $radius.main
    box-shadow: $shadows.bottom
    background: white
    cursor: pointer
    .edit
      display: none
      float: right
      margin: -4px 0 0 0
      padding: 5px 5px 2px 5px
      border-radius: $radius.main
      color: $colors.grey
      cursor: pointer
      &:hover
        color: $colors.light-black
        background: $colors.grey
    &:hover
      background: $colors.lighter-grey
      .edit
        display: block

#card-details
  > .overlay
    position: fixed
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: rgba(0, 0, 0, 0.6)
    z-index: 5
  .container
    position: absolute
    z-index: 6
    width: $widths.card-details
    top: 50px
    left: 50%
    margin: 0 0 0 (-1 * $widths.card-details / 2 - 15)
    padding: 20px 15px
    border-radius: $radius.main
    background: $colors.lighter-grey
    color: $colors.darker-grey
    > .close
      position: absolute
      float: none
      top: 5px
      right:0
    .title, h1
      display: inline-block
      margin: 0 0 10px 0
      font-size: 16px
      color: $colors.light-black
    .title
      width: 93%
      margin: 0 0 0 -5px
    .details
      display: inline-block
      width: 560px
      vertical-align: top
      section
        margin: 0 0 0 35px
        header
          margin: 0 0 0 -35px
          .title
            margin: none
          i
            margin: 0 7px 0 0
            vertical-align: top
        ul
          margin: 15px 0
        a
          color: inherit
        i
          vertical-align: middle
      .name
        margin-bottom: 20px
        header
          > i
            padding: 3px 0 0 0
        p
          a
            text-decoration: underline
      .attributes
        section
          margin-bottom: 20px
          h3
            display: inline-block
            margin: 0 0 10px 0
            font-weight: normal
        .labels
        .date
          .due-date
            display: inline-block
            padding: 5px
            border: 1px
            border-radius: $radius.main
            background: $colors.light-grey
            color: $colors.light-black
            text-decoration: underline
        .description
          a
            i
              margin: 0 7px 0 0
            span
              text-decoration: underline
            p
              color: $colors.light-black
          form
            display: none
            textarea
              box-sizing: border-box
              width: 100%
              min-height: 110px
              padding: 5px
              border: 1px solid $colors.grey
              box-shadow: $shadows.inside
              background: $colors.lighter-grey
              color: $colors.light-black
              &:focus
                outline: none
            form-controls()
      .add-comment
        margin-bottom: 20px
        textarea
          width: 95%
          height: 75px
          padding: 10px
          box-shadow: $shadows.bottom
          color: $colors.light-black
        input[type="submit"]
          submit-btn()
    aside
      display: inline-block
      width: 140px
      margin: 40px 0 0 20px
      section
        margin: 20px 0
        .actions
          position: relative
          .action
            padding: 8px
            border: 1px solid $colors.light-grey
            border-bottom: 1px solid $colors.grey
            border-radius: $radius.main
            margin: 7px 0
            background: $colors.white-gradient
            color: $colors.light-black
            font-size: 14px
            font-weight: bold
            cursor: pointer
            &:hover
              background: $colors.blue
              border: 1px solid $colors.blue
              border-bottom: 1px solid $colors.dark-blue
              color: white
          .due-date-form
            position: absolute
            display: inline-block
            width: 275px
            top: 0
            right: 0
            z-index: 7
            background: white
            color: $colors.light-black
            .overlay
              z-index: -1
            form
              fieldset
                margin: 0 0 10px 0
                label
                  box-sizing: border-box
                  display: inline-block
                  padding: 0 0 0 5px
                  width: 50%
                  &:last-child
                    input
                      width: 85%
                  input
                    width: 80%
                    padding: 5px
                    margin: 5px 0 0 0
                    border: 1px solid $colors.grey
                    box-shadow: $shadows.inside
                    background: $colors.lighter-grey
                    color: $colors.light-black
                    font-size: 12px
                    &[type="time"]
                      font-family: Helvetica
                    &:focus
                      border: 1px solid $colors.blue
                      box-shadow: $shadows.all-sides-blue
                      background: white
              .datepicker
                margin: 0 0 15px 0
                color: $colors.light-black
                .ui-datepicker-inline
                  margin: 0 auto
                .ui-corner-all
                  color: $colors.light-black
                .ui-state-active
                  background: $colors.blue
                  border: 1px $colors.dark-blue
                .ui-state-highlight
                  border: 1px solid $colors.grey
                  background: $colors.light-grey
                  color: $colors.light-black
                  font-weight: bold
              form-controls()
              .form-controls
                input[type="submit"].remove
                  float: right
                  box-shadow: $shadows.bottom-light-black
                  background: $colors.grey-gradient-top
                  color: $colors.red
                  &:hover
                    color: white
                    background: $colors.red-gradient-bottom

.sortable-card-placeholder
  padding: 7px
  border-radius: $radius.main
  background: $colors.dark-grey

.sortable-list-placeholder
  background: $colors.dark-blue
  display: inline-block
  border-radius: $radius.main

.tilted
  transform: rotate(5deg)

.material-icons.md-14
  font-size: 14px
.material-icons.md-16
  font-size: 16px
.material-icons.md-18
  font-size: 18px
.material-icons.md-24
  font-size: 24px
.material-icons.md-30
  font-size: 30px
.material-icons.md-36
  font-size: 36px
.material-icons.md-48
  font-size: 48px