$colors = {}

$colors['light-blue'] = #BCD9EA
$colors['light-blue-gradient-bottom'] = linear-gradient(to bottom,rgba(255,255,255,.3) 0,rgba(255,255,255,.2) 100%)
$colors['light-blue-gradient-top'] = linear-gradient(to top,rgba(255,255,255,.3) 0,rgba(255,255,255,.2) 100%)
$colors['blue'] =#0079BF
$colors['darker-blue'] = #026AA7

$colors['lighter-grey'] = #EDEFF0
$colors['light-grey'] = #D6DADC
$colors['grey'] = #C4C9CC
$colors['dark-grey'] = #A5ACB0
$colors['darker-grey'] = #959DA1

$colors['light-black'] = #4d4d4d

$colors['green-gradient-bottom'] = linear-gradient(to bottom, #61BD4F 0, #5AAC44 100%)
$colors['green-gradient-top'] = linear-gradient(to top, #61BD4F 0, #5AAC44 100%)

heights = {
  header: 40px
  input: 16px
}

widths = {
  short-input: 180px
  input: 270px
  list: 270px
}

radius = {
  main: 3px
}

shadows = {
  bottom: 1px 1px 1px rgba(0,0,0,.1)
  bottom-green: 0 1px 0 #3F6F21
  inside: inset 0 1px 8px rgba(0,0,0,.15)
}

form-controls()
  + div
    display: block
    height: 0
    overflow: hidden
    transition: height 0.25s
    input[type="submit"]
      padding: 0 20px
      min-height: 30px
      box-shadow: shadows.bottom-green
      background: $colors.green-gradient-bottom
      color: white
      font-size: 14px
      font-weight: bold
      cursor: pointer
      &:hover
        background: $colors.green-gradient-top
    .close
      float: none
      margin: 0 0 0 5px
      i
        vertical-align: middle