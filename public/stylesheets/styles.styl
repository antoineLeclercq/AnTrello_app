@import "whitespace-reset.css"
@import "https://fonts.googleapis.com/css?family=Lobster"
@import "stylus/_mixins"
@import "stylus/components"

body
  font: normal 14px "Helvetica Neue", Arial, Helvetica, sans-serif
  background: $colors.blue
  min-width: 500px
  > header
    box-sizing: border-box
    position: fixed
    height: 70px
    min-width: 720px
    top: 0
    left: 0
    right: 0
    height: $heights.header
    padding: 5px
    box-shadow: $shadows.bottom
    background: $colors.dark-blue
    text-align: center
    z-index: 1
    form
      position: absolute
      left: 0
      padding: 0 0 0 5px
      input
        width: $widths.short-input
        background: $colors.light-blue
        transition: width 0.25s
        opacity: 0.35
        + span
          transform: rotate(90deg)
          color: white
          + span
            opacity: 0
        &:hover
          opacity: 0.6
        &:focus
          width: $widths.input
          background: white
          opacity: 1
          + span
            left: $widths.input - 15
            + span
              display: inline-block
              position: absolute
              left: $widths.input - 15
              opacity: 1
              color: $colors.dark-grey
              cursor: pointer
              z-index: 2
      span
        position: absolute
        left: $widths.short-input - 15
        padding: 3px
        font-size: 16px
        transition: left 0.25s
    h1
      display: inline-block
      font: bold 25px Lobster, Serif
      opacity: 0.7
      color: $colors.light-blue
      &:hover
        opacity: 1
        cursor: pointer
    section
      text-align: right
      .menu
        display: inline-block
        margin: 10px 0 0 0
        padding: 5px 10px
        border-radius: $radius.main
        font-size: 12px
        cursor: pointer
        text-align: right
        color: white
        background: $colors.blue
        &:hover
          background: $colors.dark-blue
        i
          margin: 0 10px 0 0
          vertical-align: middle


#notif
  position: absolute
  top: 7px
  right: 10px
  > label
    box-sizing: border-box
    padding: 2px 4px 6px 4px
    height: $heights.header
    border-radius: $radius.main
    font-size: 18px
    background: $colors.light-blue-gradient-bottom
    color: white
    cursor: pointer
    &:hover
      background: $colors.light-blue-gradient-top
    i
      vertical-align: middle
  input
    display: none
    &:checked
      + .modal
        display: inline-block
  .modal
    width: 450px
    top: 35px
    right: 5px
    background: $colors.lighter-grey
    color: $colors.darker-grey
    hr
      width: 450px - 30
    section
      margin: 5px 0 0 0
      padding: 30px 0
      border: 1px dashed $colors.darker-grey
      border-radius: $radius.main
      background: $colors.light-grey

main
  box-sizing: border-box
  margin: 70px 0 0 0
  padding: 10px
  .container
    overflow-x: scroll;
    white-space: nowrap;
    .add-list
      display: inline-block
      width: $widths.list
      margin: 0 10px 0 5px
      padding: 5px
      border-radius: $radius.main
      background: $colors.dark-blue
      vertical-align: top
      transition: background 0.25s
      form
        label
          display: block
          box-sizing: border-box
          width: $widths.list
          border-radius: $radius.main
          cursor: pointer
          input
            background: inherit
            transition: background 0.25s
            font-size: 14px
            color: $colors.light-black
            cursor: pointer
            &::-webkit-input-placeholder
              color: $colors.light-blue
              font-size: 14px
              transition: color 0.25s
        form-controls()
        .form-controls
          height: 0
      &.show
        background: $colors.light-grey
        color: $colors.light-black
        label
          display: block
          border: 1px solid $colors.darker-grey
          box-shadow: $shadows.inside
          input
            &::-webkit-input-placeholder
              color: $colors.darker-grey
          + div
            height: 35px
            margin: 5px 0 0 0
            .material-icons
              font-size: 24px