include _mixins.pug

doctype html
html
  head
    title= AnTrello
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel='stylesheet', href='/stylesheets/styles.css')
    +js_scripts("vendor/all")
    +js_scripts("handlebars_templates")
  body
    header
      form
        input(type="text")
        span
          i.material-icons search
        span.close
          i.material-icons close
      h1 AnTrello
      #notif
        label(for="notif_check")
          i.material-icons notifications_none
        input#notif_check(type="checkbox")
        .modal
          h3 Notifications
            label.close(for="notif_check")
              i.material-icons.md-16 close
          hr
          section No Notifications
      section
        .menu
          i.material-icons.md-16 more_horiz
          u Show Menu

    main
      .container
        ul#lists

        .add-list
          form(action="/lists" method="post")
            label
              input(type="text" placeholder="Add a list..." name="list_name")
            div
              input(type="submit" value="Save")
              a.close(href="#")
                i.material-icons.md-30 close


    block content
    +js_scripts("app")
    +js_scripts("models/list", "card")
    +js_scripts("collections/lists", "cards")
    +js_scripts("views/list", "add_list")

    script.
      App.lists = new Lists(!{JSON.stringify(data.lists)});

    +js_scripts("router")