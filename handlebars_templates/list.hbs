<li class="list" data-id="{{id}}">
  <header>
    <textarea class="title" rows="1">{{name}}</textarea>
    <div class="list-icons">
      <span class="subscribed"><i class="material-icons md-16">remove_red_eye</i></span>
      <span class="more"><i class="material-icons md-16">more_horiz</i></span>
    </div>
  </header>
  <section class="modal">
    <h3>List Actions
      <span class="close"><i class="material-icons md-16">close</i></span>
    </h3>
    <hr/>
    <ul class="actions">
      <li class="action">Add Card...</li>
      <li class="action">Copy List...</li>
      <li class="action">Move List...</li>
      <li class="action">Subscribe...</li>
    </ul>
    <hr/>
    <ul class="actions">
      <li class="action">Move All cards in This List...</li>
      <li class="action">Archive All Cards in This List...</li>
    </ul>
    <hr/>
    <ul class="actions">
      <li class="action">Archive This List</li>
    </ul>
  </section>
  <div class="overlay"></div>
  <ul class="cards">
    {{#each cards}}
    <li class="card">
      <ul class="labels">
        <li class="label"></li>
      </ul>
      <p>{{name}}</p>
      <ul class="icons">
        <li class="comment-icon"></li>
        <li class="subscribe-icon"></li>
      </ul>
    </li>
    {{/each}}
  </ul>
</li>