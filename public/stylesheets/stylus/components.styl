input
  height: heights.input
  padding: 7px
  outline: none
  border: none
  border-radius: 3px

a
  text-decoration: none

textarea
  border: none
  border-radius: radius.main
  resize: none
  &:focus
    outline: none
  &.formated
    background: inherit
    font: inherit
    color: inherit

.modal
  display: none
  position: absolute
  border-radius: radius.main
  box-sizing: border-box
  padding: 10px
  background: white
  border: 1px solid $colors.light-grey
  z-index: 3
  hr
    border: none
    border-bottom: 1px solid $colors.light-grey
    margin: 10px auto
  h3
    text-align: center
    font-weight: normal
    color: $colors.darker-grey
  + .overlay
    display: none
    position: fixed
    left: 0
    top: 0
    right: 0
    bottom: 0
    opacity: 0
    z-index: 2

.close
  margin: 0 10px 0 0
  float: right
  cursor: pointer
  color: $colors.darker-grey
  &:hover
    color: $colors.light-black


#lists
  display: inline-block
  height: 100%

.list-container
  display: inline-block
  height: 100%
  .list
    box-sizing: border-box
    display: inline-block
    position: relative
    width: widths.list
    margin: 0 5px
    padding: 5px 8px
    border-radius: radius.main
    background: $colors.light-grey
    color: $colors.light-black
    vertical-align: top
    .title
      box-sizing: border-box
      width: 200px
      padding: 5px
      font-weight: bold
      transition: background 0.25s
      cursor: pointer
      &:focus
        background: white
    .list-icons
      float: right
      span
        display: inline-block
        color: $colors.darker-grey
      .more
        padding: 5px 5px 0 5px
        border-radius: radius.main
        cursor: pointer
        &:hover
          color: inherit
          background: $colors.grey
      .subscribed
        display: none
    .list-icons.is-subscribed
      .subscribed
        display: inline-block
    .modal
      top: 40px
      left: widths.list - 30
      width: 300px
      padding: 10px 0
      background: white
      color: $colors.light-black
      hr
        width: 300px - 30
      .actions
        font-weight: bold
        .action
          padding: 7px 10px
          &:hover
            background: $colors.light-black
            color: white
  .add-card
    a.show
      display: block
      box-sizing: border-box
      height: 30px
      padding: 5px 0 0 2px
      border-radius: radius.main
      color: $colors.darker-grey
      cursor: pointer
      &:hover
        text-decoration: underline
        color: $colors.light-black
        background: $colors.grey
      &.hide
        display: none
      + form
        display: none
    form.show
      display: block
      textarea
        form-controls()

.card
  box-sizing: border-box
  width: widths.list - 16
  padding: 7px
  margin: 5px 0
  border-radius: radius.main
  box-shadow: shadows.bottom
  background: white
  .edit
    display: none
    float: right
    margin: -4px 0 0 0
    padding: 5px 5px 2px 5px
    border-radius: radius.main
    color: $colors.grey
    cursor: pointer
    &:hover
      color: $colors.light-black
      background: $colors.grey
  &:hover
    background: $colors.lighter-grey
    .edit
      display: block

.material-icons.md-14
  font-size: 14px
.material-icons.md-16
  font-size: 16px
.material-icons.md-18
  font-size: 18px
.material-icons.md-24
  font-size: 24px
.material-icons.md-30
  font-size: 24px
.material-icons.md-36
  font-size: 36px
